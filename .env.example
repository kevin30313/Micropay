# MicroPay - Environment Variables Template
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Service Ports
API_GATEWAY_PORT=3000
USERS_PORT=3001
PAYMENTS_PORT=3002
ORDERS_PORT=3003
NOTIFICATIONS_PORT=3004

# JWT Configuration
JWT_SECRET=micropay-secret-key-2024-change-in-production

# AWS Configuration (for production deployment)
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012

# Cluster Configuration
CLUSTER_NAME=micropay-cluster
ENVIRONMENT=development

# Database Configuration (if using external DB)
# DATABASE_URL=postgresql://user:password@localhost:5432/micropay
# REDIS_URL=redis://localhost:6379

# External Services (if needed)
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...

# Monitoring (optional)
# SENTRY_DSN=https://...
# NEW_RELIC_LICENSE_KEY=...

# Feature Flags
ENABLE_CIRCUIT_BREAKER=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true